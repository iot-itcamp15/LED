void setup() { //ส่วนsetup จะเป็นกรกำหนดค่า
  pinMode(D0,OUTPUT); //เป็นการกำหนดค่าให้ค่า D0 เป็นตัวกำหนดแสดง OUTPUT ออกมา

}

void loop() {
  //ในส่วนลูปจะเป็นการวนทำซ้ำเรื่อยๆ
  digitalWrite(D0,HIGH); //สั่งการใหค่า้ D0 ไฟติด
  delay(1000); //ดีเลย์จะเป็นการหน่วงก่อนที่จะเริ่มทำในบรรทัดถัดไป
  digitalWrite(D0,LOW);  //สั่งการให้ค่า D0 ไฟดับ
  delay(1000);

}
